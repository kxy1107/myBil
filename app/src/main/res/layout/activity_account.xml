<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startbg"
    >
    <TextView
        android:id="@+id/tv_date_select"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择日期:"
        android:textSize="28sp"
        />
    <EditText
        android:id="@+id/ed_data_timer"
        android:layout_toRightOf="@+id/tv_date_select"
        android:layout_alignTop="@+id/tv_date_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2016-2-17"
        android:layout_marginRight="30dp"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/tv_cost"
        android:layout_below="@+id/tv_date_select"
        android:layout_alignRight="@+id/tv_date_select"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消费金额:"
        android:textSize="28sp"
        />
    <EditText
        android:id="@+id/ed_cost"
        android:layout_toRightOf="@+id/tv_cost"
        android:layout_alignTop="@+id/tv_cost"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_account"
        android:layout_below="@+id/tv_cost"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="记录"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:background="@drawable/shape"
        />
</RelativeLayout>
