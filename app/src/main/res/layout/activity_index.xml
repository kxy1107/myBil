<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startbg">

    <RelativeLayout
        android:id="@+id/rlyt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >


        <TextView
            android:id="@+id/tv_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="@string/date"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_text_date"
            android:text="2016/1/31"
            android:textColor="#ff0000"
            android:textSize="32sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlyt_today_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlyt_date"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_text_today_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="@string/today_consum"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_today_consum_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_text_today_cost"
            android:text="12.0"
            android:textColor="#ff0000"
            android:textSize="32sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_line1"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#000000"
        android:layout_below="@+id/rlyt_today_cost"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <RelativeLayout
        android:id="@+id/rlyt_month_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlyt_today_cost"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_text_month_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:text="@string/month_consum"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_month_consum_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_text_month_cost"
            android:text="100.0"
            android:textColor="#ff0000"
            android:textSize="32sp" />
    </RelativeLayout>
<Button
    android:id="@+id/btn_add_consumer_records"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rlyt_month_cost"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:text="我又花钱了"
    android:textSize="24sp"
    android:textColor="#ffffff"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/shape"
    />
    <TextView
        android:id="@+id/tv_line2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FF4500"
        android:layout_below="@+id/btn_add_consumer_records"
        android:layout_marginTop="50dp"

        />
    <TextView
        android:id="@+id/tv_today_cost_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日消费详情"
        android:textColor="#FF00FF"
        android:layout_below="@+id/tv_line2"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="5dp"

      />
    <TextView
        android:id="@+id/tv_line3"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FF4500"
        android:layout_below="@+id/tv_today_cost_details"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/tv_month_cost_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本月消费详情"
        android:textColor="#FF00FF"
        android:layout_below="@+id/tv_line3"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:id="@+id/tv_line4"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FF4500"
        android:layout_below="@+id/tv_month_cost_details"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>
